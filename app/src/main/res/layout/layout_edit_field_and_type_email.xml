<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_mail"
        android:layout_toLeftOf="@id/type_spinner_mail"
        android:layout_toStartOf="@id/type_spinner_mail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_field_mail" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.reginald.editspinner.EditSpinner
        android:layout_centerVertical="true"
        app:dropDownDrawable="@drawable/ic_arrow_drop_down_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/type_spinner_mail"
        android:spinnerMode="dropdown"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />
</RelativeLayout>
